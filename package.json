{
  "name": "@metervara/grid-listing",
  "version": "1.1.1",
  "description": "Responsive grid listing component with tag filtering and staggered animations",
  "type": "module",
  "main": "./dist/grid-listing.cjs",
  "module": "./dist/grid-listing.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/grid-listing.js",
      "require": "./dist/grid-listing.cjs"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js",
      "require": "./dist/vite-plugin.cjs"
    },
    "./styles": "./dist/styles/index.css",
    "./grid.css": "./dist/styles/grid.css",
    "./variables.css": "./dist/styles/variables.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:example": "vite --config example/vite.config.ts",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist"
  },
  "keywords": [
    "grid",
    "listing",
    "responsive",
    "animation"
  ],
  "author": "Metervara",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
